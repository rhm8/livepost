<ul class="list-unstyled">
  <% liveposts.each do |livepost| %>
    <li class="media mb-3">
      <img class="mr-2 rounded" src="<%= gravatar_url(livepost.user, { size: 50 }) %>" alt="">
      <div class="media-body">
        <div>
          <%= link_to livepost.user.name, user_path(livepost.user) %> <span class="text-muted">posted at <%= livepost.created_at %></span>
        </div>
        <div>
          <p><%= livepost.content %></p>
        </div>
        <div>
          <% if current_user == livepost.user %>
            <%= link_to "Delete", livepost, method: :delete, data: { confirm: "削除してもよろしいですか？" }, class: 'btn btn-danger btn-sm' %>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate liveposts %>
</ul>